{
  "name": "toretto-css",
  "version": "0.0.26",
  "description": "Toretto CSS Framework",
  "main": "index.js",
  "scripts": {
    "copy": "cp -r ./public/v/dev ./public/v/prev/${npm_package_version} && echo ${npm_package_version} > ./public/v/prev/${npm_package_version}/version.txt && rm -rf ./public/v/current && cp -r ./public/v/prev/${npm_package_version} ./public/v/current",
    "commit": "git add CHANGELOG.md && git add ./public/v/prev/${npm_package_version} && git tag v${npm_package_version} && git commit -m v${npm_package_version} && git push --tags origin master",
    "release": "standard-version && npm run copy && npm run commit",
    "dev": "live-server ./public --ignore=./node_modules --port=34615",
    "dev-funcs": "nodemon -r esm ./public/v/dev/toretto-funcs.js",
    "dev-core": "nodemon -r esm ./public/v/dev/toretto-css.js",
    "test": "npx ava test/*",
    "test-dev": "npx ava test/* --watch"
  },
  "keywords": [
    "CSS",
    "JS",
    "CSS in JS"
  ],
  "author": "Rus INozemtsev",
  "license": "ISC",
  "devDependencies": {
    "ava": "^3.14.0",
    "esm": "^3.2.25",
    "live-server": "^1.2.1",
    "standard-version": "^9.0.0"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
